# Porta do servidor backend
PORT=3000

# Ambiente de execução (development, production, etc)
NODE_ENV=development

# URL do frontend (usada para CORS e redirecionamentos)
FRONTEND_URL=http://localhost:3000

# URL de conexão com o banco de dados PostgreSQL (Prisma)
DATABASE_URL=postgresql://usuario:senha@localhost:5432/nome_do_banco

# Segredo para assinar tokens JWT
JWT_SECRET=sua_jwt_secret

# Configurações do Google OAuth2
GOOGLE_CLIENT_ID=sua_google_client_id
GOOGLE_CLIENT_SECRET=sua_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

# URL de conexão com o Redis
REDIS_URL=redis://localhost:6379

# Caminho do executável do Chromium para o Puppeteer (opcional)
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser